<div class="container">
  <div class="searchbar d-flex m-3 p-2">
    <%= form_tag root_path, method: :get do %>
    <%= text_field_tag :query,
                       params[:query],
                       class: "form-control",
                       placeholder: "search"
    %>
    <%= submit_tag "Search", class: "btn btn-primary m-1 p-1" %>
    <% end %>

  </div>

    <%= link_to "New article", new_articles_path, class: "btn btn-success m-3 p-2" %>

  <ul>
    <% @articles.each do | article | %>
      <li><%= link_to article.title, article_path(article) %> - reading time: <%= article.reading_time %> minutes  - link: <%= link_to "short_link", article.source_link %></li>
    <% end %>
  </ul>

</div>
